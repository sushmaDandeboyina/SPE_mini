pipeline{
    agent any
    stages{
        stage('Clone Git'){
            steps{
                git branch: 'main', url:'https://github.com/sushmaDandeboyina/SPE_mini.git'
            }
        }
        stage('Build Code') {
            steps{
                sh "ls -la"
                sh "chmod u+x calculator.py"
            }
        }
        stage('Execute Code') {
            steps {
                script {
                    def command = "python3 calculator.py ${CHOICE} ${NUMBER1}"
                    if (CHOICE == '4') {
                        command += " ${NUMBER2}"
                    }
                    sh command
                }
            }
        }
        stage('Test Code') {
            steps {
                sh "ls -la"
                sh "chmod u+x calcuator_Test.py"
                sh "python3 calcuator_Test.py"
            }
        }
    }
}